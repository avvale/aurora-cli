        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/cqrs": "^11.0.2",
        "@nestjs/graphql": "^13.2.0",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/serve-static": "^5.0.3",
