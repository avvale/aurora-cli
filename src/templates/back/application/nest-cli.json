{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [{
            "include": "i18n/**/*",
            "outDir": "dist/src",
            "watchAssets": true
        }, {
            "include": "assets/**/*",
            "outDir": "dist/src",
            "watchAssets": true
        }]
    }
}